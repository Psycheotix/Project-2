                  <label>General Notes
                    <input type="text" id="surgeonGeneralNotes" placeholder="Add General Notes">
                  </label>
                </div>

                <div class="medium-6 columns">
                  <div class="input-group-button align-bottom"></div>
                  <input type="submit" class="button button expanded" value="Create Surgeon">
