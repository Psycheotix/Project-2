<!--ITEM TABLE-->


<div class="box no-shadow ">
    <div class="box-header bg-transparent">
        <!-- tools box -->
        <div class="pull-right box-tools"> <span class="box-btn" data-widget="collapse"><i class="icon-minus"></i>
            </span> </div>
        <h3 class="box-title"><i class="ti-cut"></i>
            <span>Procedure's Items List</span>
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <!-- modal -->
        <div class="row">

            <table class="stack">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Catalog</th>
                        <th>Category</th>
                        <th>CPU</th>

                    </tr>
                </thead>
                <tbody>
                    {{#items}} 
                    <tr>
                        <td>{{itemName}} </td>
                        <td>{{itemCatalog}}</td>
                        <td>{{itemCategory}}</td>
                        <td>{{itemCpu}}</td>
                    </tr>
                    {{/items}} 
                </tbody>
            </table>
        </div>
    </div>
    <!-- end Modal -->
</div> 
<!-- /.box-body -->
<!-- end of ITEM TABLE-->

