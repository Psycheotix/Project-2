<div class="large-12 columns">
    <div class="box">
        <div class="box-header bg-transparent">
            <!-- tools box -->
            <div class="pull-right box-tools"> <span class="box-btn" data-widget="collapse"><i class="icon-minus"></i>
                </span> </div>
            <h3 class="box-title"><i class="fontello-th-outline"></i>
                <span>Items List</span>
            </h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body " style="display: block;">
            <div class="row" style="margin-bottom:10px;">
                <div class="large-4 columns">
                    <input class="form-control" id="filter" placeholder="Search..." type="text" /> </div>
                <div class="large-2 columns">
                    <select class="filter-status form-control">
                        <option value="active">In Stock</option>
                        <option value="disabled">Out of Stock</option>
                        <option value="suspended">Retired</option>
                    </select>
                </div>
                <div class="large-6 columns"></div>
            </div>
            <table id="footable-res2" class="demo" data-filter="#filter" data-filter-text-only="true">
                <thead>
                    <tr>
                        <th data-toggle="true"> Item Name </th>
                        <th data-hide="phone,tablet"> Catalog </th>
                        <th> Category </th>
                        <th> CPU </th>
                    </tr>
                </thead>
                <tbody>
                    {{#items}}
                    <tr>
                        <td>{{itemName}} </td>
                        <td>{{itemCatalog}}</td>
                        <td>{{itemCategory}}</td>
                        <td>{{itemCpu}}</td>
                    </tr>
                    {{/items}}
                </tbody>
            </table>
            <br>
        </div>
        <!-- end .timeline -->
    </div>
    <!-- box -->
</div>